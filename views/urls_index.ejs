<!DOCTYPE html>
<html lang = "en">
    <head>
        <title>TinyApp</title>
    </head>
   
    <body>
        <% include partials/_header %>
        
        <div>
            <ul>

            <!--Loop through Urls and display long and short-->
            <% if (user) { %>    

                <!--Display the Users short and long URLS to edit or delete-->  
                <% for (var shortURL in urls) { %>
                    <li>
                    <!-- long urls -->
                    <%= urls[shortURL].longURL %>  ----->
                    <!-- short urls -->
                    <%= shortURL %> 
                    <br>
                    
                    <!-- Edit Link -->
                    <a href= "/urls/<%= shortURL %>">Edit</a>
                    
                    <br>
                    
                    <!-- Delete Button -->
                    <form method="POST" action="/urls/<%= shortURL %>/delete"> 
                        <input type="submit" value="Delete">
                    </form>
                </li>

                <% } %>
            <% } else { %>

                <!--Ask user to Login-->
                <h3>Please Login...</h3>
                <form action= "/login" method="GET"">
                    <input type="submit" value="Login"> 
                </form>

            <% } %>

            </ul>
        </div>
    </body>

    <body>

        <ul>
        <!-- Form to Create a New Url -->
        <h4>Add a New URL</h4>
        <form action = "/urls/new" method "get">
            <input type = 'submit' value = "New URL">
        </form>
        </ul>
        
    </body>
</html>







